{
  "model_url": "http://0.0.0.0:5000/answer",
  "router_bot_host": "0.0.0.0",
  "router_bot_port": 7000,
  "bot_token": "some_token",
  "infer_batch_length": 20,
  "request_timeout": 120,
  "send_message_url": "http://0.0.0.0:7000/botsome_token/sendMessage",
  "get_updates_url": "http://0.0.0.0:7000/botsome_token/getUpdates",
  "polling_interval_secs": 1,
  "log_file_name": "tests.log",
  "test_template": {
    "payload": "All work and no play makes Jack a dull boy.",
    "repeat_test": 5,
    "num_of_chats": 1,
    "msgs_per_chat": 1,
    "shuffle_msgs": false
  },
  "logging": {
    "version": 1,
    "formatters": {
      "log_formatter": {
        "class": "logging.Formatter",
        "format": "%(asctime)s %(levelname)s %(message)s"
      }
    },
    "handlers": {
      "log_to_stderr": {
        "level": "DEBUG",
        "class": "logging.StreamHandler",
        "stream": "ext://sys.stderr",
        "formatter": "log_formatter"
      },
      "log_to_file": {
        "level": "DEBUG",
        "class": "logging.FileHandler",
        "filename": "tests.log",
        "formatter": "log_formatter",
        "mode": "w"
      }
    },
    "loggers": {
      "wrapper_logger": {
        "propagate": false,
        "level": "DEBUG",
        "handlers": ["log_to_stderr", "log_to_file"]
      }
    }
  },
  "test_cases": [
    {
      "num_of_chats": 20
    },
    {
      "msgs_per_chat": 20
    }
  ]
}
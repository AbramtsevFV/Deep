{
"chainer": {
    "in": [
      "sentences"
    ],
    "pipe": [
      {
        "class_name": "bert_preprocessor",
        "vocab_file": "{MODEL_PATH}/{MODEL_NAME}/vocab.txt",
        "do_lower_case": false,
        "max_seq_length": 64,
        "in": [
          "sentences"
        ],
        "out": [
          "bert_features"
        ]
      },
      {
        "class_name": "bert_classifier",
        "n_classes": "#classes_vocab.len",
        "return_probas": true,
        "one_hot_labels": true,
        "multilabel": true,
        "bert_config_file": "{MODEL_PATH}/{MODEL_NAME}/bert_config.json",
        "pretrained_bert": "{MODEL_PATH}/{MODEL_NAME}/{MODEL_NAME}",
        "load_path": "{MODEL_PATH}/{MODEL_NAME}",
        "keep_prob": 0.5,
        "learning_rate": 1e-05,
        "learning_rate_drop_patience": 5,
        "learning_rate_drop_div": 2.0,
        "in": [
          "bert_features"
        ],
        "out": [
          "topic_pred_probas"
        ]
      },
      {
        "in": "topic_pred_probas",
        "out": "topic_pred_ids",
        "class_name": "proba2labels",
        "max_proba": false,
        "confident_threshold":0.5
      },
      {
        "id": "classes_vocab",
        "class_name": "simple_vocab",
        "save_path": "{MODEL_PATH}/{MODEL_NAME}/classes.dict",
        "load_path": "{MODEL_PATH}/{MODEL_NAME}/classes.dict",
        "in": "topic_pred_ids",
        "out": "{MODEL_NAME}"
      }
    ],
    "out": [
      "{MODEL_NAME}"
    ]
  },
  "metadata": {
    "imports": [
       "deeppavlov.core.data.simple_vocab"
    ],
    "requirements": [
      "{DEEPPAVLOV_PATH}/requirements/tf.txt",
      "{DEEPPAVLOV_PATH}/requirements/bert_dp.txt",
      "annotators/cobot_topics/requirements.txt"
    ],
    "variables": {
      "ROOT_PATH": "~/deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models",
      "MODEL_PATH": "{MODELS_PATH}/classifiers",
      "MODEL_NAME": "cobot_topics"
    },      
    "download": [
      {
        "url": "http://files.deeppavlov.ai/alexaprize_data/{MODEL_NAME}.tar.gz",
        "subdir": "{MODELS_PATH}/classifiers"
      }
    ]
  }
}

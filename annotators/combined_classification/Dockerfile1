FROM ubuntu:20.04

ARG CONFIG
ARG DATA_URL=http://files.deeppavlov.ai/alexaprize_data/palbert_7task.tar.gz
ARG PORT
ENV CONFIG=$CONFIG
ENV PORT=$PORT

RUN  apt-get update \
  && apt-get install -y wget \
  && rm -rf /var/lib/apt/lists/*

RUN wget $DATA_URL /tmp

RUN tar -xvzf /tmp/*.tar.gz -C /tmp/

WORKDIR /src


RUN pip install git+https://github.com/rimijoker/DeepPavlov.git@pal-bert

RUN mkdir common

COPY annotators/combined_classification/requirements.txt .
RUN pip install -r requirements.txt

COPY annotators/combined_classification/ ./
COPY common/ common/

RUN python -m deeppavlov install $CONFIG
CMD gunicorn --workers=1 --bind 0.0.0.0:8087 --timeout=300 server:app

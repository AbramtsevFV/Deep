{
  "chainer": {
    "in": [
      "sentences"
    ],
    "out": [
      "attitude"
    ],
    "pipe": [
      {
        "class_name": "bert_preprocessor",
        "vocab_file": "{MODEL_PATH}/vocab.txt",
        "do_lower_case": false,
        "max_seq_length": 64,
        "in": [
          "sentences"
        ],
        "out": [
          "bert_features"
        ]
      },
      {
        "class_name": "attitude_classification",
        "n_classes": 5,
        "return_probas": true,
        "one_hot_labels": true,
        "bert_config_file": "{MODEL_PATH}/bert_config.json",
        "save_path": "{MODEL_PATH}/model",
        "load_path": "{MODEL_PATH}/model",
        "keep_prob": 0.5,
        "learning_rate": 1e-05,
        "learning_rate_drop_patience": 5,
        "learning_rate_drop_div": 2.0,
        "in": [
          "bert_features"
        ],
        "out": [
          "attitude"
        ]
      }
    ]
  },
  "metadata": {
    "imports": [
      "annotators.DeepPavlovAttitudeClassification.bert_float_classifier"
    ],
    "requirements": [
      "{DEEPPAVLOV_PATH}/requirements/tf.txt",
      "{DEEPPAVLOV_PATH}/requirements/bert_dp.txt",
      "annotators/DeepPavlovAttitudeClassification/requirements.txt"
    ],
    "variables": {
      "ROOT_PATH": "~/deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models",
      "MODEL_PATH": "{MODELS_PATH}/classifiers/amazon_reviews_bert_v0"
    },
    "labels": {
      "server_utils": "AttitudeClassificationModel"
    },
    "download": [
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/classifiers/amazon_reviews_bert_v0.tar.gz",
        "subdir": "{MODELS_PATH}/classifiers"
      }
    ]
  }
}

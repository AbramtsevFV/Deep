{
    "dataset_reader": {
        "class_name": "basic_classification_reader",
        "x": [
            "context",
            "curr_utterance"
        ],
        "y": "final_label",
        "data_path": "{DOWNLOADS_PATH}/out_of_dialog_analysis/",
        "train": "train_ood_history_2_classes.csv",
        "valid": "valid_ood_history_2_classes.csv"
    },
    "dataset_iterator": {
        "class_name": "siamese_iterator",
        "seed": 243
    },
    "chainer": {
        "in": [
            "context",
            "curr_utterance"
        ],
        "in_y": [
            "y"
        ],
        "pipe": [
            {
                "class_name": "torch_bert_preprocessor",
                "vocab_file": "bert-base-uncased",
                "do_lower_case": true,
                "max_seq_length": 64,
                "in": [
                    "context",
                    "curr_utterance"
                ],
                "out": [
                    "bert_features"
                ]
            },
            {
                "id": "classes_vocab",
                "class_name": "simple_vocab",
                "fit_on": [
                    "y"
                ],
                "save_path": "{MODEL_PATH}/classes.dict",
                "load_path": "{MODEL_PATH}/classes.dict",
                "in": [
                    "y"
                ],
                "out": [
                    "y_ids"
                ]
            },
            {
                "in": [
                    "y_ids"
                ],
                "out": [
                    "y_onehot"
                ],
                "class_name": "one_hotter",
                "depth": "#classes_vocab.len",
                "single_vector": true
            },
            {
                "class_name": "torch_breakdown_classifier",
                "n_classes": "#classes_vocab.len",
                "return_probas": true,
                "pretrained_bert": "bert-base-uncased",
                "save_path": "{MODEL_PATH}/model",
                "load_path": "{MODEL_PATH}/model",
                "optimizer": "AdamW",
                "optimizer_parameters": {
                    "lr": 2e-05
                },
                "learning_rate_drop_patience": 2,
                "learning_rate_drop_div": 2.0,
                "in": [
                    "bert_features"
                ],
                "in_y": [
                    "y_ids"
                ],
                "out": [
                    "bd_probas"
                ]
            }
        ],
        "out": [
            "bd_probas"
        ]
    },
    "train": {
        "epochs": 100,
        "batch_size": 64,
        "metrics": [
            "f1_macro",
            "accuracy"
        ],
        "validation_patience": 5,
        "val_every_n_epochs": 1,
        "log_every_n_epochs": 1,
        "show_examples": false,
        "evaluation_targets": [
            "train",
            "valid"
        ],
        "class_name": "torch_trainer"
    },
    "metadata": {
        "imports": [
            "breakdown_classifier"
        ],
        "variables": {
            "ROOT_PATH": "~/.deeppavlov",
            "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
            "MODELS_PATH": "{ROOT_PATH}/models",
            "MODEL_PATH": "/models/ood_dbdc_torch_bert_v2"
        },
        "requirements": [
            "{DEEPPAVLOV_PATH}/requirements/pytorch.txt",
            "{DEEPPAVLOV_PATH}/requirements/transformers.txt"
        ]
    }
}
